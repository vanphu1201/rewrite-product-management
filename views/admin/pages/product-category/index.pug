extends ../../layouts/default

block main
  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
          a(
          href=`/admin/products-category/create`
          class="btn btn-outline-success"
          ) + Thêm mới
        table.table.table-hover.table-sm
            thead
                tr
                    th
                        input(type="checkbox" name="checkall")
                    th STT
                    th Hình ảnh
                    th Tiêu đề
                    th Vị trí
                    th Trạng thái
                    th Hành động
            tbody
                each item, index in records
                    tr
                        td
                            input(
                                type="checkbox"
                                name="id"
                                value=item.id
                            )
                        td #{index + 1}
                        td
                            img(
                                src=item.thumbnail
                                alt=item.title
                                width="100px"
                                height="auto"
                            )
                        td #{item.title}
                        td
                            input(
                                type="number"
                                value=item.position
                                style="width: 60px"
                                min="1"
                                name="position"
                            )
                        td
                            if (item.status == "active")
                                a(href="javascript:;" class="badge badge-success" data-status=item.status data-id=item.id) Hoạt động
                            else 
                                a(href="javascript:;" class="badge badge-danger" data-status=item.status data-id=item.id) Dừng hoạt động
                        td
                            a(
                                href=`/admin/products-category/edit/${item.id}`
                                class="btn btn-warning btn-sm"
                                edit
                                data-id=item.id
                            ) Sửa
                            button(
                                href=`/admin/products-category/delete/${item.id}`
                                class="btn btn-danger btn-sm ml-1"
                            ) Xóa